<?xml version="1.0"?>
<prefab>
    <!-- all the built-in behaviors this actor has -->
    <behaviors>
        <behavior type="sprite">
            <properties 
                texture="spaceship" 
                />
        </behavior>
        <behavior type="rigidbody" />
        <behavior type="circlecollider">
            <properties
                radius="16"
                />
        </behavior>
        <behavior type="emitter">
            <properties
                texture="tiny particle"
                lifetime="infinite"
                rate="20"
                y="-14"
                spread="20"
                minparticlelife="1"
                maxparticlelife="2"
                minspeed="2"
                maxspeed="5"
                startcolor="#ff0000ff"
                endcolor="#ffff0000"
                startscale="1.5"
                endscale="0.25"
                />
        </behavior>
    </behaviors>
    
    <!-- all the lua scripts that make up this actor -->
    <scripts>
        <script file="spaceship.lua" />
        <script file="wrap.lua" />
    </scripts>
    
    <!-- query tags -->
    <tags>
        <tag>player</tag>
    </tags>
    
    <!-- child actors (accessible in script, transformed relative) -->
    <components>
        <component name="shields_s" prefab="shields_p" />
    </components>
</prefab>